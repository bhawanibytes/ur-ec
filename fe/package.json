{
  "name": "urbanesta",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --webpack",
    "prod:env": "cp env.production .env",
    "build": "next build --webpack",
    "build:prod": "cp env.production .env && NODE_ENV=production CI=true NODE_OPTIONS='--max-old-space-size=2048' next build --webpack",
    "build:prod:low-mem": "cp env.production .env && NODE_ENV=production CI=true NODE_OPTIONS='--max-old-space-size=1536' next build",
    "start": "next start",
    "start:prod": "cp env.production .env && NODE_ENV=production next start -p 3000",
    "start:ec2": "cp env.production .env && NODE_ENV=production BACKEND_URL=http://10.0.2.144:80 next start -p 3000",
    "lint": "next lint",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs urbanesta-frontend",
    "pm2:status": "pm2 status",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "pm2:monit": "pm2 monit",
    "deploy": "bash deploy.sh",
    "deploy:full": "chmod +x deploy.sh && ./deploy.sh production",
    "deploy:dev": "chmod +x deploy.sh && ./deploy.sh development",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "npm run build && npx @next/bundle-analyzer",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "clean": "rm -rf .next out build",
    "logs": "pm2 logs urbanesta-frontend",
    "maintenance:start": "pm2 stop urbanesta-frontend",
    "maintenance:end": "pm2 start urbanesta-frontend"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "critters": "^0.0.23",
    "dotenv": "^16.4.5",
    "next": "16.1.6",
    "react": "^19.2.4",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.5.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "terser-webpack-plugin": "^5.3.14"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
