# Urbanesta Backend - Development Environment Configuration
# ========================================================
# Copy this content to .env when running in development mode

# Application Configuration
NODE_ENV=development
PORT=3012
HOSTNAME=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://127.0.0.1:27017/urbanesta_local
MONGODB_URL=mongodb://127.0.0.1:27017/urbanesta_local


AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

CLOUDFRONT_DOMAIN=
CLOUDFRONT_SIDE_URL=

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_DOMAIN=localhost:3000
FRONTEND_PORT=3000

# Rate Limiting Configuration (More lenient for development)
RATE_LIMIT_WINDOW_MS=
RATE_LIMIT_MAX_REQUESTS=
RATE_LIMIT_UPLOAD_MAX=
RATE_LIMIT_STRICT_MAX=

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# CORS Configuration (Development - more permissive)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://127.0.0.1:3000,http://127.0.0.1:3001,http://127.0.0.1:3002
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-API-Key
CORS_EXPOSED_HEADERS=X-RateLimit-Limit,X-RateLimit-Remaining,X-RateLimit-Reset

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# PM2 Configuration
PM2_INSTANCES=1
PM2_MAX_MEMORY=512M
PM2_RESTART_DELAY=4000

# Security Configuration (Development - less strict)
# JWT_SECRET=dev_jwt_secret_key_for_development_only_not_for_production
# SESSION_SECRET=dev_session_secret_key_for_development_only_not_for_production
# API_KEY=dev_api_key_for_development_only

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=50mb
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif
UPLOAD_PATH=img-assets

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=

# Performance Configuration (Development - more lenient)
REQUEST_TIMEOUT=60000
RESPONSE_TIMEOUT=60000
KEEP_ALIVE_TIMEOUT=10000

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/healthz

# Backup Configuration (Disabled for development)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7


# External API Configuration
EXTERNAL_API_TIMEOUT=
EXTERNAL_API_RETRIES=

# two factor key 

# two factor key 
TWO_FACTOR_API_KEY=

# üîê JWT Configuration
JWT_SECRET=
JWT_EXPIRES_IN=
JWT_REFRESH_SECRET=
JWT_REFRESH_EXPIRES_IN=

# üß± Session Configuration
SESSION_SECRET=
SESSION_COOKIE_NAME=
SESSION_EXPIRE_DAYS=

# üîë API Key (replace this with your real one when integrating external APIs)
API_KEY=

# Development specific
DEBUG=true
VERBOSE_LOGGING=true
